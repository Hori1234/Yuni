<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RatingBar
        android:id="@+id/reviewRating"
        android:layout_centerHorizontal="true"
        android:stepSize="0.5"
        android:rating="3"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reviewRatingText"
        android:layout_below="@+id/reviewRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Good"/>

    <EditText
        android:id="@+id/reviewText"
        android:layout_below="@+id/reviewRatingText"
        android:hint="Tell us what you thought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sendReview"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/reviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Feedback" />

</RelativeLayout>